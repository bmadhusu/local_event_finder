<%= link_to("<< Back to List", tweeters_path, :class => 'back-link') %>

<div class="tweeters delete">
  <h2>Delete Tweeter</h2>

  <%= form_for(@tweeter, :method => 'delete') do |f| %>

    <p>Are you sure you want to permanently delete this tweeter?</p>

    <p class="reference-name"><%= f.object.name %></p>

    <div class="form-buttons">
      <%= f.submit("Delete Tweeter") %>
    </div>

  <% end %>
</div>
